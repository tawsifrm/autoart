<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--Universal Styles that apply regardless of theme-->
    
    <!--Design Tokens-->
    <Styles.Resources>
        <ResourceDictionary>
            <CornerRadius x:Key="CardCornerRadius">10</CornerRadius>
            <CornerRadius x:Key="ButtonCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="InputCornerRadius">6</CornerRadius>
            <Thickness x:Key="CardPadding">16</Thickness>
            <Thickness x:Key="CardMargin">0,0,0,12</Thickness>
            <x:Double x:Key="CardSpacing">12</x:Double>
        </ResourceDictionary>
    </Styles.Resources>
    
    <!--Toolbar Styles-->
    <Style Selector="Canvas.Toolbar">
        <Setter Property="Background" Value="{DynamicResource ThemeToolbarColor}"/>
    </Style>
    
    <Style Selector="Label.Title">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
    </Style>
    
    <Style Selector="Label.Bold">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    
    <Style Selector="Control.ClickThru">
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>
    
    <!--Toolbar Buttons-->
    <Style Selector="Button.ToolbarButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style Selector="Button.ToolbarButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#30FFFFFF"/>
    </Style>
    
    <Style Selector="Button.CloseApp:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#E81123"/>
    </Style>
    
    <!--Main Body-->
    <Style Selector="Image.MainBody">
        <Setter Property="Stretch" Value="Fill"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
    </Style>
    
    <!--Image Preview-->
    <Style Selector="Border.ImagePreview">
        <Setter Property="Background" Value="{DynamicResource ThemeImagePreviewBackground}"/>
        <Setter Property="CornerRadius" Value="10"/>
    </Style>
    
    <!--Card Styles-->
    <Style Selector="Border.Card">
        <Setter Property="Background" Value="{DynamicResource ThemeCardBackground}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource CardMargin}"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>
    
    <Style Selector="TextBlock.CardTitle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>
    
    <Style Selector="TextBlock.SectionTitle">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeSecondaryForeground}"/>
        <Setter Property="LetterSpacing" Value="0.5"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    
    <!--Buttons-->
    <Style Selector="Button">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
        <Setter Property="Padding" Value="16 10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonHoverBackground}"/>
    </Style>
    
    <Style Selector="Button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeButtonPressedBackground}"/>
    </Style>
    
    <Style Selector="Button:disabled /template/ ContentPresenter">
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    
    <!--Primary Action Button-->
    <Style Selector="Button.Primary">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryButtonBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemePrimaryButtonForeground}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemePrimaryButtonHover}"/>
    </Style>
    
    <!--Danger Button-->
    <Style Selector="Button.Danger">
        <Setter Property="Background" Value="{DynamicResource ThemeAccentDanger}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="Button.Danger:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeAccentDangerHover}"/>
    </Style>
    
    <!--TextBox-->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="{DynamicResource ThemeTextBoxBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeTextBoxBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}"/>
        <Setter Property="Padding" Value="10 6"/>
    </Style>
    
    <Style Selector="TextBox:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeTextBoxBorderFocused}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>
    
    <!--ComboBox-->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="{DynamicResource ThemeTextBoxBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeTextBoxBorder}"/>
        <Setter Property="CornerRadius" Value="{StaticResource InputCornerRadius}"/>
        <Setter Property="Padding" Value="10 6"/>
    </Style>
    
    <!--CheckBox-->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundColor}"/>
    </Style>
    
    <!--Separator-->
    <Style Selector="Separator">
        <Setter Property="Background" Value="{DynamicResource ThemeSeparatorColor}"/>
        <Setter Property="Margin" Value="0 8"/>
        <Setter Property="Height" Value="1"/>
    </Style>
    
    <!--Slider-->
    <Style Selector="Slider">
        <Setter Property="Foreground" Value="{DynamicResource ThemeAccentPrimary}"/>
    </Style>
    
    <!--Color Swatch Styles-->
    <Style Selector="Border.ColorSwatch">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    
    <Style Selector="Border.ColorSwatch:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentPrimary}"/>
        <Setter Property="BoxShadow" Value="0 0 0 3 #30818CF8"/>
    </Style>
    
    <Style Selector="Border.ColorSwatch.Selected">
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeAccentPrimary}"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="BoxShadow" Value="0 0 0 3 #60818CF8"/>
    </Style>
    
</Styles>
