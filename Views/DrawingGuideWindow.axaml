<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="380"
        x:Class="AutoArt.Views.DrawingGuideWindow"
        Title="AutoArt - Drawing Guide"
        
        Width="380"
        Height="380"
        CanResize="False"
        
        WindowStartupLocation="CenterScreen"
        
        SystemDecorations="None"
        TransparencyLevelHint="AcrylicBlur"
        Background="#F0FFFFFF"
        Topmost="True">
    
    <Border CornerRadius="12" 
            BorderBrush="{DynamicResource ThemeCardBorder}" 
            BorderThickness="1" 
            Padding="20"
            Background="#FCFCFC"
            BoxShadow="0 8 32 0 #30000000">
        <StackPanel Spacing="14">
            
            <!-- Header -->
            <StackPanel Spacing="6">
                <TextBlock Text="âœ¨ Drawing Guide" 
                           FontSize="20" FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource ThemeForegroundColor}"/>
                <TextBlock Text="Your creative assistant" 
                           FontSize="13" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource ThemeSecondaryForeground}"/>
            </StackPanel>
            
            <!-- Current Layer Info Card -->
            <Border Background="{DynamicResource ThemeCardBackground}" 
                    BorderBrush="{DynamicResource ThemeCardBorder}"
                    BorderThickness="1"
                    CornerRadius="10" 
                    Padding="16"
                    BoxShadow="0 2 8 0 #08000000">
                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto">
                    
                    <!-- Large Beautiful Color Swatch -->
                    <Border Name="ColorSwatch" 
                            Grid.RowSpan="2" 
                            Width="64" Height="64" 
                            CornerRadius="12"
                            Background="Gray" 
                            BorderBrush="{DynamicResource ThemeAccentPrimary}" 
                            BorderThickness="3" 
                            Margin="0,0,16,0"
                            BoxShadow="0 4 12 0 #20000000"/>
                    
                    <!-- Layer Info -->
                    <TextBlock Name="LayerText" 
                               Grid.Row="0" Grid.Column="1" 
                               Text="Layer 1 of 12" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource ThemeForegroundColor}"
                               VerticalAlignment="Bottom" 
                               Margin="0,0,0,6"/>
                    
                    <!-- Hex Code with Copy Button -->
                    <StackPanel Grid.Row="1" Grid.Column="1" 
                                Orientation="Horizontal" 
                                Spacing="6"
                                VerticalAlignment="Top">
                        <TextBlock Name="ColorHexText" 
                                   Text="#FFFFFF" 
                                   FontSize="16" 
                                   FontFamily="Consolas"
                                   Foreground="{DynamicResource ThemeSecondaryForeground}"
                                   VerticalAlignment="Center"/>
                        <Button Name="CopyHexButton"
                                Content="ðŸ“‹"
                                FontSize="14"
                                Padding="4,2"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip.Tip="Copy hex code to clipboard"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Clear CTA Instructions -->
            <Border Background="{DynamicResource ThemePastelBlue}"
                    CornerRadius="8" 
                    Padding="14">
                <StackPanel Spacing="6">
                    <TextBlock Text="ðŸŽ¯ Ready to Draw" 
                               FontSize="13" FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeForegroundColor}"/>
                    <TextBlock Name="InstructionText" 
                               Text="Select this color in your drawing app, then press SHIFT when ready."
                               TextWrapping="Wrap" 
                               TextAlignment="Center" 
                               FontSize="12" 
                               Foreground="{DynamicResource ThemeSecondaryForeground}"/>
                </StackPanel>
            </Border>
            
            <!-- Progress Indicator -->
            <ProgressBar Name="DrawingProgress" 
                         Height="4" 
                         IsVisible="False" 
                         IsIndeterminate="True" 
                         Foreground="{DynamicResource ThemeAccentSuccess}"
                         CornerRadius="2"/>
            
            <!-- Layer Navigation Buttons -->
            <Grid ColumnDefinitions="*,8,*">
                <Button Name="PreviousLayerButton" 
                        Grid.Column="0" 
                        Content="â—€ Previous Layer" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"
                        IsEnabled="False"/>
                <Button Name="NextLayerButton" 
                        Grid.Column="2" 
                        Content="Next Layer â–¶" 
                        HorizontalAlignment="Stretch" 
                        HorizontalContentAlignment="Center"/>
            </Grid>
            
            <!-- Stop Session Button -->
            <Button Name="StopButton" 
                    Classes="Danger"
                    Content="Stop Session" 
                    HorizontalAlignment="Stretch" 
                    HorizontalContentAlignment="Center"/>
            
        </StackPanel>
    </Border>
</Window>
